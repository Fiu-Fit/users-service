// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int    @id @default(autoincrement())
  uid       String @unique
  email     String @unique
  firstName String @map("first_name")
  lastName  String @map("last_name")
  role      Role
  goals     Goal[]
}

enum Role {
  Athlete
  Trainer
  Admin
}

model Goal {
  id           Int          @id @default(autoincrement())
  title        String
  description  String
  userId       Int
  user         User         @relation(fields: [userId], references: [id])
  targetValue  Int
  actualValue  Int          @default(0) 
  deadline     DateTime?
  createdAt    DateTime     @default(now())
  updatedAt    DateTime?    @updatedAt @default(now())
  category     Category
  status       GoalStatus   @default(InProgress)
}

enum GoalStatus {
  InProgress
  Completed
  CompletedLate
}

enum Category {
  Legs
  Chest
  Back
  Shoulders
  Arms
  Core
  Cardio
  Fullbody
  Freeweight
  Stretching
  Strength
}
